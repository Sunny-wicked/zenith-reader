{
  "name": "zenith-reader",
  "version": "1.1.2",
  "description": "A lightweight Offline E-Reader",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "author": "Praheel Kumar",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.2",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "epubjs": "^0.3.93",
    "jszip": "^3.10.1",
    "pdfjs-dist": "^4.2.67",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.zenith.reader",
    "publish": [
      {
        "provider": "github",
        "owner": "Sunny-wicked",
        "repo": "zenith-reader"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "files": [
      "**/*",
      "!node_modules/electron/**/*"
    ],
    "extends": null
  }
}